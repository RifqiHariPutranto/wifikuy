<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wifi Kuy!</title>
    <link rel="icon" href="img/logo.jpeg" type="image/logo" sizes="16x16">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" ></script>
    
  </head>
  <body>

    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
      <label for="check">
        <i class="fas fa-bars" id="sidebar_btn"></i>
      </label>
      <div class="left_area">
        <h3><img src="img/logo.jpeg" alt="logo" />Wifi <span>Kuy!</span></h3>
      </div>
      
    </header>
    <!--header area end-->
    
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
      <div class="nav_bar">
        <img src="img/default-profile.jpg" class="mobile_profile_image" alt="">
        <i class="fa fa-bars nav_btn"></i>
      </div>
      <div class="mobile_nav_items">
        <a href="/index"><i class="fas fa-desktop"></i><span>Dashboard</span></a>
        <a href="/details"><i class="fas fa-table"></i><span>Details</span></a>
        <a href="/location"><i class="fas fa-map-marked-alt"></i><span>Location</span></a>
        <a href="/wlan"><i class="fas fa-wifi"></i><span>WLAN WAC</span></a>
        <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
      </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
      <div class="profile_info">
        <img src="img/default-profile.jpg" class="profile_image" alt="">
        <h4>User</h4>
      </div>
      <a href="/index"><i class="fas fa-desktop"></i><span>Dashboard</span></a>
      <a href="/details"><i class="fas fa-table"></i><span>Details</span></a>
      <a href="/location"><i class="fas fa-map-marked-alt"></i><span>Location</span></a>
      <a href="/wlan"><i class="fas fa-wifi"></i><span>WLAN WAC</span></a>
      <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
    </div>
    <!--sidebar end-->
    <div class="content">
      <h2>Dashboard</h2>
      <div class="graph">
        <div class="graph1">
          <canvas id="GraphHarian" width="750" height="400"></canvas>
        </div>
        <div class="graph2">
          <canvas id="GraphBulanan" width="400" height="250"></canvas>
        </div>
      </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="js/my_chart.js"></script>
    <script src="js/my_chart2.js"></script>
    
    <script type="text/javascript">
    $(document).ready(function(){
      $('.nav_btn').click(function(){
        $('.mobile_nav_items').toggleClass('active');
      });
    });
    </script>
  
  </body>
</html>