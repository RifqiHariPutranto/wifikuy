<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wifi Kuy!</title>
    <link rel="icon" href="img/logo.jpeg" type="image/logo" sizes="16x16">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" ></script>
  </head>
  <body>

    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
      <label for="check">
        <i class="fas fa-bars" id="sidebar_btn"></i>
      </label>
      <div class="left_area">
        <h3><img src="img/logo.jpeg" alt="logo" />Wifi <span>Kuy!</span></h3>
      </div>
    
    </header>
    <!--header area end-->
    
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
      <div class="nav_bar">
        <img src="img/default-profile.jpg" class="mobile_profile_image" alt="">
        <i class="fa fa-bars nav_btn"></i>
      </div>
      <div class="mobile_nav_items">
        <a href="/index"><i class="fas fa-desktop"></i><span>Dashboard</span></a>
        <a href="/details"><i class="fas fa-table"></i><span>Details</span></a>
        <a href="/location"><i class="fas fa-map-marked-alt"></i><span>Location</span></a>
        <a href="/wlan"><i class="fas fa-wifi"></i><span>WLAN WAC</span></a>
        <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
      </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
      <div class="profile_info">
        <img src="img/default-profile.jpg" class="profile_image" alt="">
        <h4>User</h4>
      </div>
      <a href="/index"><i class="fas fa-desktop"></i><span>Dashboard</span></a>
      <a href="/details"><i class="fas fa-table"></i><span>Details</span></a>
      <a href="/location"><i class="fas fa-map-marked-alt"></i><span>Location</span></a>
      <a href="/wlan"><i class="fas fa-wifi"></i><span>WLAN WAC</span></a>
      <a href="#"><i class="fas fa-sliders-h"></i><span>Settings</span></a>
    </div>
    <!--sidebar end-->
    <div class="content">
      <h2>WLAN WAC</h2>
      <p id="demo"></p>
      <div class="table">
        <table class="table table-fluid" id="myTable">
          <thead>
          <tr><th>No.</th><th>WAC</th><th>MODUL1</th><th>MODUL2</th><th>MODUL3</th><th>MODUL4</th><th>MODUL5</th><th>MODUL6</th><th>TOTAL</th></tr>
          </thead>
          <tbody>
          <%wlancounts.forEach(wlancount => {%>
          <tr>
            <td><%= wlancount._id %></td>
            <td><%= wlancount.wac %></td>
            <td><%= wlancount.wism1 %></td>
            <td><%= wlancount.wism2 %></td>
            <td><%= wlancount.wism3 %></td>
            <td><%= wlancount.wism4 %></td>
            <td><%= wlancount.wism5 %></td>
            <td><%= wlancount.wism6 %></td>
            <td><%= wlancount.total %></td>
          </tr>
          <%})%>
          </tbody>
          </table>
      </div>
    </div>

    <script>
      const date = new Date(document.lastModified);
      document.getElementById("demo").innerHTML = date;
    </script>
    <script>
      $(document).ready( function () {
      $('#myTable').DataTable({
        paging:false,
        searching:false,
        rowCallback: function(row, data, index){
          var modul1 = parseFloat(data[2]),
              modul2 = parseFloat(data[3]),
              modul3 = parseFloat(data[4]),
              modul4 = parseFloat(data[5]),
              modul5 = parseFloat(data[6]),
              modul6 = parseFloat(data[7]);
          //Coloring kolom modul 1
  	      if(modul1>= 450){
    	      $(row).find('td:eq(1)').css('background-color', 'pink');
          }
          if(modul1< 450){
    	      $(row).find('td:eq(1)').css('background-color', 'yellow');
          }
          if(modul1< 400){
    	      $(row).find('td:eq(1)').css('background-color', 'lightgreen');
          }
          //Coloring kolom modul 2
          if(modul2>= 450){
    	      $(row).find('td:eq(2)').css('background-color', 'pink');
          }
          if(modul2< 450){
    	      $(row).find('td:eq(2)').css('background-color', 'yellow');
          }
          if(modul2< 400){
    	      $(row).find('td:eq(2)').css('background-color', 'lightgreen');
          }
          //Coloring kolom modul 3
          if(modul3>= 450){
    	      $(row).find('td:eq(3)').css('background-color', 'pink');
          }
          if(modul3< 450){
    	      $(row).find('td:eq(3)').css('background-color', 'yellow');
          }
          if(modul3< 400){
    	      $(row).find('td:eq(3)').css('background-color', 'lightgreen');
          }
          //Coloring kolom modul 4
          if(modul4>= 450){
    	      $(row).find('td:eq(4)').css('background-color', 'pink');
          }
          if(modul4< 450){
    	      $(row).find('td:eq(4)').css('background-color', 'yellow');
          }
          if(modul4< 400){
    	      $(row).find('td:eq(4)').css('background-color', 'lightgreen');
          }
          //Coloring kolom modul 5
          if(modul5>= 450){
    	      $(row).find('td:eq(5)').css('background-color', 'pink');
          }
          if(modul5< 450){
    	      $(row).find('td:eq(5)').css('background-color', 'yellow');
          }
          if(modul5< 400){
    	      $(row).find('td:eq(5)').css('background-color', 'lightgreen');
          }
          //Coloring kolom modul 6
          if(modul6>= 450){
    	      $(row).find('td:eq(6)').css('background-color', 'pink');
          }
          if(modul6< 450){
    	      $(row).find('td:eq(6)').css('background-color', 'yellow');
          }
          if(modul6< 400){
    	      $(row).find('td:eq(6)').css('background-color', 'lightgreen');
          }
        },
        "columnDefs": [
          {"className": "dt-center", "targets": "_all"},
          {"visible":false, "targets": 0}],
        "order":[[ 0, "asc" ]]
  });
  } );
      </script>
    <script type="text/javascript">
    $(document).ready(function(){
      $('.nav_btn').click(function(){
        $('.mobile_nav_items').toggleClass('active');
      });
    });
    </script>

  </body>
</html>